{% set id           = config.fields['id'] ?? -1 %}

{% if canedit %}
        {% if id <= 0 %}
        <div class="card-footer mx-n2 d-flex">
            <button type="submit" name="add" value="1" class="ms-auto btn btn-primary">
                <i class="ti ti-device-floppy"></i>
                <span>{{ _x('button', 'Save') }}</span>
            </button>
        </div>
        {% else %}
        <div class="card-footer mx-n2 d-flex">
            <button type="submit" name="update" value="1" class="ms-auto btn btn-primary">
                <i class="ti ti-device-floppy"></i>
                <span>{{ _x('button', 'Save') }}</span>
            </button>
        </div>
        {% endif %}
        {% if not config.isNewID(id) %}
        <input type="hidden" name="id" value="{{ id }}" />
        {% endif %}
        <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}" />
        <input type="hidden" name="entities_id" value="{{ entity }}" />
    </form>
{% endif %}